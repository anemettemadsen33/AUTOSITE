# Production Environment Configuration for AUTOSITE

# Application
APP_NAME=AUTOSITE
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://autosite.example.com

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database (Production - MySQL/PostgreSQL recommended)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=autosite_production
DB_USERNAME=autosite_user
DB_PASSWORD=  # Use strong password

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.autosite.example.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=https

# Cache (Redis recommended for production)
CACHE_STORE=redis
CACHE_PREFIX=autosite_cache

# Queue (Redis recommended for production)
QUEUE_CONNECTION=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Mail (Production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@autosite.example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=autosite.example.com,www.autosite.example.com

# Frontend URL
FRONTEND_URL=https://autosite.example.com

# AWS (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (if using Pusher instead of Reverb)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Social Authentication
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/auth/google/callback"

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/api/auth/facebook/callback"

# API Rate Limiting
API_RATE_LIMIT=60
API_GUEST_RATE_LIMIT=30
API_AUTH_RATE_LIMIT=5

# Media Library
MEDIA_DISK=s3  # or 'public' for local storage

# Scout (Search Engine)
SCOUT_DRIVER=meilisearch  # or 'algolia' or 'database'
SCOUT_PREFIX=autosite_
SCOUT_QUEUE=true

# Meilisearch
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

# Algolia (alternative)
ALGOLIA_APP_ID=
ALGOLIA_SECRET=

# Monitoring & Analytics
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Security Headers
SECURE_HEADERS_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_TWO_FACTOR=true
ENABLE_VEHICLE_COMPARISON=true
ENABLE_SAVED_SEARCHES=true
ENABLE_PRICE_ALERTS=true

# Performance
OCTANE_SERVER=swoole  # or 'roadrunner' if using Laravel Octane
HORIZON_REDIS_CONNECTION=horizon  # if using Laravel Horizon

# Backups
BACKUP_ENABLED=true
BACKUP_DISK=s3
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
